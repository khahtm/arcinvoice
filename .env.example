# Arc Invoice Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# Application
# =============================================================================
# Internal app routing (relative path)
NEXT_PUBLIC_APP_URL=/dashboard

# Full site URL for payment links (auto-detected in browser, needed for SSR)
# NEXT_PUBLIC_SITE_URL=https://arcinvoice.org

# =============================================================================
# Arc Chain Configuration
# =============================================================================
# Arc Testnet
NEXT_PUBLIC_CHAIN_ID=5042002
NEXT_PUBLIC_RPC_URL=https://arc-testnet.drpc.org

# Arc Mainnet (uncomment for production)
# NEXT_PUBLIC_CHAIN_ID=5042001
# NEXT_PUBLIC_RPC_URL=https://rpc.arc.circle.com

# =============================================================================
# Contract Addresses
# =============================================================================
# These are auto-configured in lib/contracts/addresses.ts
# Override only if deploying custom contracts
# NEXT_PUBLIC_FACTORY_ADDRESS=
# NEXT_PUBLIC_USDC_ADDRESS=

# =============================================================================
# Supabase
# =============================================================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# Transak Fiat Payment (Optional)
# =============================================================================
# Get API key from Transak partner dashboard: https://transak.com
NEXT_PUBLIC_TRANSAK_API_KEY=your_transak_api_key
NEXT_PUBLIC_TRANSAK_ENV=STAGING  # STAGING or PRODUCTION

# =============================================================================
# Contract Deployment (Optional)
# =============================================================================
# Only needed if deploying/redeploying smart contracts
DEPLOYER_PRIVATE_KEY=
USDC_ADDRESS=0x3600000000000000000000000000000000000000
